<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="180dp"/>
    <TextView
            android:text="HOTEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="191dp" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
            android:fontFamily="sans-serif"/>
</android.support.constraint.ConstraintLayout>